<div class="container-fluid row justify-content-evenly">
    <div class="card col-md-12 col-lg-5 mb-3">
        <img src="/images/garden 2 login.png" class="card-img-top" alt="garden2 logo with grown tree">
        <h2 class="ms-2">
            Logging in...
        </h2>
        <div class="card-body ">
            <form class="form login-form">
                <div class="form-group mb-3">
                    <label for="email-login" class="col-4 text-end">email:</label>
                    <input class="form-input" type="text" id="email-login" class="col-7" />
                </div>
                <div class="form-group mb-3">
                    <label for="password-login" class="col-4 text-end">password:</label>
                    <input class="form-input" type="password" id="password-login" class="col-7" />
                </div>
                <div class="form-group mb-3 d-flex justify-content-center">
                    <button class="rounded login-form" type="submit">login</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card  col-md-12 col-lg-5 mb-3">
        <img src="/images/garden 2 signup.png" class="card-img-top" alt="garden2 logo with seedling">
        <h2 class="ms-2">
            Starting out...
        </h2>
        <div class="card-body">
            <form class="form login-form">
                <div class="form-group mb-3">
                    <label for="email-signup" class="col-4 text-end">Email:</label>
                    <input class="form-input" class="col-7" type="text" id="email-signup" />
                </div>
                <div class="form-group mb-3">
                    <label for="username-signup" class="col-4 text-end">username:</label>
                    <input class="form-input" class="col-7" type="text" id="username-signup" />
                </div>
                <div class="form-group mb-3">
                    <label for="password-signup" class="col-4 text-end">password:</label>
                    <input class="form-input" class="col-7" type="password" id="password-signup" />
                </div>
                <div class="form-group d-flex justify-content-center">
                    <button class="rounded signup-form" type="submit">signup</button>
                </div>
            </form>
        </div>
    </div>
</div>
 <script src="/js/login.js"></script>